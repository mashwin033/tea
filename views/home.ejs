<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snack Preference App</title>
    <style>
        /* ... (keep the existing styles) ... */
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <h1>Snack Preference App</h1>
    
    <form action="/submit" method="POST" id="preferenceForm">
        <div>
            <label for="drink">Favorite Drink:</label>
            <select id="drink" name="drink" required>
                <option value="">Select a drink</option>
                <% drinks.forEach(drink => { %>
                    <option value="<%= drink %>"><%= drink %></option>
                <% }); %>
                <option value="other">Other</option>
            </select>
            <input type="text" id="otherDrink" name="otherDrink" placeholder="Enter other drink" class="hidden">
        </div>
        <div>
            <label for="snack">Favorite Snack:</label>
            <select id="snack" name="snack" required>
                <option value="">Select a snack</option>
                <% snacks.forEach(snack => { %>
                    <option value="<%= snack %>"><%= snack %></option>
                <% }); %>
                <option value="other">Other</option>
            </select>
            <input type="text" id="otherSnack" name="otherSnack" placeholder="Enter other snack" class="hidden">
        </div>
        <button type="submit">Submit</button>
    </form>

    <% if (message) { %>
        <div class="message">
            <strong><%= message %></strong>
        </div>
    <% } %>

    <% if (count) { %>
        <div class="results">
            <h2>Current Preferences:</h2>
            
            <h3>Drinks:</h3>
            <ul>
            <% for (const [drink, drinkCount] of Object.entries(count.drinks).sort((a, b) => b[1] - a[1])) { %>
                <li><%= drink %>: <%= drinkCount %></li>
            <% } %>
            </ul>

            <h3>Snacks:</h3>
            <ul>
            <% for (const [snack, snackCount] of Object.entries(count.snacks).sort((a, b) => b[1] - a[1])) { %>
                <li><%= snack %>: <%= snackCount %></li>
            <% } %>
            </ul>
        </div>
    <% } else { %>
        <p>No preferences data available.</p>
    <% } %>

    <script>
        document.getElementById('drink').addEventListener('change', function() {
            document.getElementById('otherDrink').classList.toggle('hidden', this.value !== 'other');
        });
        document.getElementById('snack').addEventListener('change', function() {
            document.getElementById('otherSnack').classList.toggle('hidden', this.value !== 'other');
        });

        document.getElementById('preferenceForm').addEventListener('submit', function(e) {
            const drinkSelect = document.getElementById('drink');
            const snackSelect = document.getElementById('snack');
            const otherDrink = document.getElementById('otherDrink');
            const otherSnack = document.getElementById('otherSnack');

            if (drinkSelect.value === 'other' && otherDrink.value.trim() === '') {
                e.preventDefault();
                alert('Please enter a custom drink');
            }
            if (snackSelect.value === 'other' && otherSnack.value.trim() === '') {
                e.preventDefault();
                alert('Please enter a custom snack');
            }
        });
    </script>
</body>
</html>
