<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Results</h1>
    <div class="results-container">
        <h2>Drink Preferences</h2>
        <ul>
            <% Object.keys(count.drinks).forEach(drink => { %>
                <li>
                    <%= drink %>: <%= count.drinks[drink] %>
                    <form action="/reduce-count" method="POST" style="display:inline;">
                        <input type="hidden" name="id" value="<%= drink %>">
                        <input type="hidden" name="type" value="drink">
                        <button type="submit">-</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        <h2>Snack Preferences</h2>
        <ul>
            <% Object.keys(count.snacks).forEach(snack => { %>
                <li>
                    <%= snack %>: <%= count.snacks[snack] %>
                    <form action="/reduce-count" method="POST" style="display:inline;">
                        <input type="hidden" name="id" value="<%= snack %>">
                        <input type="hidden" name="type" value="snack">
                        <button type="submit">-</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        <form action="/clear" method="POST">
            <button type="submit">Clear Preferences</button>
        </form>
    </div>
</body>
</html>
