<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snack Preference Results</title>
</head>
<body>
    <h1>Snack Preference Results</h1>

    <% if (typeof count !== 'undefined') { %>
        <h2>Drinks:</h2>
        <ul>
        <% for (const [drink, drinkCount] of Object.entries(count.drinks)) { %>
            <li><%= drink %>: <%= drinkCount %></li>
        <% } %>
        </ul>

        <h2>Snacks:</h2>
        <ul>
        <% for (const [snack, snackCount] of Object.entries(count.snacks)) { %>
            <li><%= snack %>: <%= snackCount %></li>
        <% } %>
        </ul>
    <% } else { %>
        <p>No preferences data available.</p>
    <% } %>

    <a href="/">Back to Home</a>
</body>
</html>
